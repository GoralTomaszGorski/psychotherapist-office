<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">
    <changeSet id="0005" author="tomasz.gorski88@gmail.com">


        <createTable tableName="patient_role">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints unique="true"/>
            </column>
            <column name="description" type="VARCHAR(100)"/>
        </createTable>

        <createTable tableName="patient_roles">
            <column name="patient_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_patient_roles_patient_id"
                             referencedTableName="Patient"
                             referencedColumnNames="id"
                             primaryKey="true"
                             primaryKeyName="pk_patient_roles"
                />
            </column>
            <column name="role_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_patient_roles_role_id"
                             referencedTableName="patient_role"
                             referencedColumnNames="id"
                             primaryKey="true"
                             primaryKeyName="pk_patient_roles"
                />
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>